{{#swiper-container grabCursor=true pagination=true spaceBetween=30 registerAs=streamCarousel}}
  {{#each streams as |stream|}}
    {{#swiper-slide}}
      {{yield stream (hash
        header=(component 'stream-carousel/header')
        body=(component 'stream-carousel/body')
        footer=(component 'stream-carousel/footer')
      )}}
    {{/swiper-slide}}
  {{/each}}
{{/swiper-container}}
